{
    "name": "samirsabiee/laravel-hotfix",
    "description": "This is my package laravel-hotfix",
    "keywords": [
        "samirsabiee",
        "laravel-hotfix"
    ],
    "homepage": "https://github.com/samirsabiee/laravel-hotfix",
    "license": "MIT",
    "authors": [
        {
            "name": "Samir Sabiee",
            "email": "samirsabiee@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0|^8.1|^8.2",
        "laravel/framework": "^7.0|^8.0|^9.0"
    },
    "require-dev": {
        "pestphp/pest": "^1.20",
        "spatie/ray": "^1.28"
    },
    "autoload": {
        "psr-4": {
            "SamirSabiee\\Hotfix\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SamirSabiee\\Hotfix\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "phpstan/extension-installer": true,
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "extra": {
        "laravel": {
            "providers": [
                "SamirSabiee\\Hotfix\\HotfixServiceProvider"
            ]
        }
    }
}
